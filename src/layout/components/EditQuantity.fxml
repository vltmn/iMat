<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root alignment="CENTER_LEFT" styleClass="edit-quantity" stylesheets="@../styles.css" type="HBox" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Button fx:id="subBtn" mnemonicParsing="false" HBox.hgrow="NEVER">
         <graphic>
            <FontIcon iconLiteral="fa-minus" iconSize="19" styleClass="font-icon" />
         </graphic>
         <styleClass>
            <String fx:value="btn" />
            <String fx:value="btn-warning" />
         </styleClass></Button>
      <TextField fx:id="qtyField" alignment="CENTER_RIGHT" prefWidth="60.0" text="0.0" HBox.hgrow="SOMETIMES" />
      <Button fx:id="addBtn" mnemonicParsing="false" HBox.hgrow="NEVER">
         <graphic>
            <FontIcon iconLiteral="fa-plus" iconSize="19" styleClass="font-icon" />
         </graphic>
         <styleClass>
            <String fx:value="btn" />
            <String fx:value="btn-default" />
         </styleClass></Button>
   </children>

</fx:root>
