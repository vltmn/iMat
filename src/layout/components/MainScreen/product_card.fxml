<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root cache="true" fillWidth="false" spacing="5.0" styleClass="product-card" stylesheets="@../../styles.css" type="VBox" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ImageView fx:id="productImage" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" />
        <Label fx:id="productName" minHeight="50.0" prefWidth="140.0" style="-fx-font-weight: 900;" styleClass="product-card-text" text="Potatis" wrapText="true">
         <font>
            <Font size="15.0" />
         </font></Label>
      <HBox alignment="BOTTOM_LEFT" spacing="2.0">
         <children>
            <Label fx:id="priceLabel" text="65:55">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Label fx:id="unitLabel" text="kr/kg">
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets bottom="2.0" />
               </HBox.margin>
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
      </HBox>
      <HBox fx:id="editQuantityWrapper" alignment="CENTER" prefWidth="150.0" />
   </children>
</fx:root>
