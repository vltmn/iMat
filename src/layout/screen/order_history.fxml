<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<fx:root alignment="CENTER" fillHeight="false" styleClass="modal-wrapper" stylesheets="@../styles.css" type="HBox" xmlns="http://javafx.com/javafx/9.0.4" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox>
         <children>
            <AnchorPane>
               <children>
                  <Label text="Orderhistorik">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
                  <FontIcon iconLiteral="fa-times" iconSize="24" layoutX="513.0" layoutY="23.0" onMouseClicked="#onCloseBtnClicked" styleClass="close" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="0.0" />
               </children>
               <VBox.margin>
                  <Insets bottom="10.0" top="10.0" />
               </VBox.margin>
            </AnchorPane>
            <HBox fx:id="parentHBox">
               <children>
                  <ScrollPane fitToWidth="true" hbarPolicy="NEVER" hmax="0.0">
                     <content>
                        <VBox fx:id="historyVBox" />
                     </content>
                  </ScrollPane>
                  <ScrollPane fitToWidth="true" minWidth="500.0">
                     <content>
                        <VBox fx:id="productVBox" />
                     </content>
                  </ScrollPane>
               </children>
            </HBox>
         </children>
         <styleClass>
            <String fx:value="order-history" />
            <String fx:value="bg" />
         </styleClass>
      </VBox>
   </children>
</fx:root>
